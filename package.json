{
  "name": "zod-to-mongoose",
  "version": "1.0.0",
  "description": "A library that allows you to create mongoose schemas derived from zod schemas, in an intiutive yet powerful way. Works without the need to add non-standard types to your zod schemas.",
  "author": {
    "name": "Benjamin Lindberg"
  },
  "keywords": [
    "mongoose",
    "zod",
    "schema",
    "validation",
    "mongodb",
    "mongodb schema",
    "mongodb validation",
    "mongodb zod",
    "mongodb zod schema",
    "mongodb zod validation",
    "mongoose zod",
    "mongoose zod schema",
    "mongoose zod validation",
    "types",
    "typescript",
    "ts"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "license": "MIT",
  "dependencies": {
    "tslint": "^6.1.3",
    "typescript": "^5.8.3"
  },
  "files": [
    "./dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "lint": "tslint -c tslint.json src/**/*.ts",
    "prepublish": "npm run build",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^24.0.13",
    "bench-node": "^0.9.0",
    "jest": "^30.0.4",
    "mongoose": "^8.0.3",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "zod": "^4.0.0"
  },
  "peerDependencies": {
    "mongoose": "^8.0.3",
    "zod": "^4.0.0"
  }
}
